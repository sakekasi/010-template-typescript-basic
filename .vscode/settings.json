{
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "/bin/bash",
      "args": ["-c", "./scripts/track-history.bash; exec bash"]
    },
    "fish": {
      "path": "/usr/local/bin/fish",
      // executes command to source the script before going interactive
      "args": ["-C", "source ./scripts/track-history.fish"]
    }
  },
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "bash",
      "icon": "terminal-bash",
      "args": ["--init-file", "${workspaceRoot}/scripts/bash_init.sh"]
    }
  }
}
